{
  "name": "slo-dashboard-api",
  "version": "1.0.0",
  "description": "Backend API for SLO Dashboard",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node db/migrate.js",
    "db:seed": "node db/seed.js",
    "db:setup": "npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "drizzle-kit": "^0.28.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
